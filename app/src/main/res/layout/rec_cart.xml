<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/order_border"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="91.88dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintStart_toStartOf="@id/tv1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv1"
        app:layout_constraintStart_toEndOf="@id/iv1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alata_reguler"
        android:textColor="#1E1E1E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/menuNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/menuName"
        app:layout_constraintStart_toStartOf="@id/menuName"
        android:fontFamily="@font/alata_reguler"
        android:textColor="#949494"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/menuNote"
        app:layout_constraintStart_toStartOf="@id/menuNote"
        android:layout_marginTop="10dp"
        android:src="@drawable/kurang" />

    <TextView
        android:id="@+id/menuQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv2"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintBottom_toBottomOf="@id/iv2"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/alata_reguler"
        android:textColor="#1E1E1E"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/menuQuantity"
        app:layout_constraintStart_toEndOf="@id/menuQuantity"
        app:layout_constraintBottom_toBottomOf="@id/menuQuantity"
        android:layout_marginStart="15dp"
        android:src="@drawable/tambah" />

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/alata_reguler"
        android:textColor="#652B27"
        android:textSize="17sp" />

</androidx.constraintlayout.widget.ConstraintLayout>