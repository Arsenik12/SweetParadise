<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/menuName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menu Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menu Notes"
        android:textSize="14sp"
        android:textColor="#949494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuName"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuNote" />

    <TextView
        android:id="@+id/menuQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/menuPrice"
        app:layout_constraintTop_toTopOf="@id/menuPrice" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/kurang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuPrice"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/tambah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuPrice"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
