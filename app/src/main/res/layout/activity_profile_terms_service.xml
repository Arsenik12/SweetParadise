<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileTermsActivity"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#FAF9F9">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="Terms of Service"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/arrow_back"
        app:layout_constraintEnd_toStartOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/firstPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="Welcome to the Sweets Paradise application, operated by Sweets Paradise Dessert Café. By using this App, you agree to comply with these Terms and Conditions. Please read carefully before using any of the services provided by the App."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/line"
        android:layout_width="365dp"
        android:layout_height="1dp"
        android:src="@drawable/profile_line"
        app:layout_constraintTop_toBottomOf="@id/firstPara"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="1. Eligibility: Must be 13+ or have parental consent."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="2. Account: Keep your login details secure. You’re responsible for activity on your account."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num1"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="3. Orders: Orders are final once confirmed. Prices and availability may change."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="4. Payments: All prices include taxes. Secure payment methods are provided."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num3"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="5. Delivery: Times are estimates. Ensure accurate delivery details."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num4"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/num6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="6. Conduct: Don’t misuse the App or interfere with its operation."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num5"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="7. Privacy: Your data is handled as per our Privacy Policy."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num6"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="8. Liability: We’re not liable for errors, interruptions, or indirect damages."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num7"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/num9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="9. Changes: Terms may change. Continued use means you accept updates."
        android:textColor="#808080"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num8"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata_reguler"
        android:text="Thank you for using Sweets Paradise!"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/num9"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>