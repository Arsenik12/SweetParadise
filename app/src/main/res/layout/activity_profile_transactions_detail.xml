<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF9F9">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/titleBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/alata_reguler"
        android:text="History Bill"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.010" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/billBG"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bill_background">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@id/billBG"
            android:layout_marginTop="14dp"
            android:layout_marginStart="25dp"
            android:text="Hi, "
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/tv1"
            android:text="Bob Garfield"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/line0"
            android:layout_width="2dp"
            android:layout_height="51dp"
            android:src="@drawable/menu_type_border"
            app:layout_constraintStart_toEndOf="@id/username"
            app:layout_constraintEnd_toStartOf="@id/orderType"
            />

        <TextView
            android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            android:layout_marginEnd="20dp"
            android:text="Dine In"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line5"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@+id/billBG"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="@id/line1"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Location"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            android:layout_marginEnd="20dp"
            android:text="lorem ipsum 2B"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            app:layout_constraintStart_toStartOf="@id/tv2"
            android:layout_marginTop="16dp"
            android:text="Date"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv3"
            app:layout_constraintEnd_toEndOf="@id/locationName"
            android:text="November 2, 2024"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv3"
            app:layout_constraintStart_toStartOf="@id/tv3"
            android:layout_marginTop="16dp"
            android:text="Time"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="@id/date"
            android:text="17.34"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line5"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@+id/billBG"
            app:layout_constraintTop_toBottomOf="@+id/tv4"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderBill"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="@id/tv4"/>

        <ImageView
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line5"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@+id/billBG"
            app:layout_constraintTop_toBottomOf="@+id/rvOrderBill"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toStartOf="@id/line3"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Price"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/priceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv5"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            android:layout_marginEnd="20dp"
            android:text="108.000"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv5"
            app:layout_constraintStart_toStartOf="@id/tv5"
            android:layout_marginTop="16dp"
            android:text="Tax (10%)"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/taxAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv6"
            app:layout_constraintEnd_toEndOf="@id/priceAmount"
            android:text="10.800"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv6"
            app:layout_constraintStart_toStartOf="@id/tv6"
            android:layout_marginTop="16dp"
            android:text="Other"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/otherAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv7"
            app:layout_constraintEnd_toEndOf="@id/taxAmount"
            android:text="0"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line5"
            android:layout_marginTop="9dp"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@+id/billBG"
            app:layout_constraintTop_toBottomOf="@+id/tv7"/>

        <ImageView
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line5"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="@id/billBG"
            app:layout_constraintStart_toStartOf="@+id/billBG"
            app:layout_constraintTop_toBottomOf="@+id/line4"/>

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintStart_toStartOf="@id/tv7"
            android:layout_marginTop="16dp"
            android:text="TOTAL"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv8"
            app:layout_constraintEnd_toStartOf="@id/totalAmount"
            android:text="Rp "
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv9"
            app:layout_constraintEnd_toEndOf="@id/otherAmount"
            android:text="118.800"
            android:textStyle="bold"
            android:fontFamily="@font/alata_reguler"
            android:textSize="22sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>