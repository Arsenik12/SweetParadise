<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/amountOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:fontFamily="@font/alata_reguler"
        android:textSize="20sp"/>
    
    <TextView
        android:id="@+id/menuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/amountOrder"
        app:layout_constraintTop_toTopOf="@id/amountOrder"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_reguler"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/menuName"
        android:textStyle="bold"
        android:fontFamily="@font/alata_reguler"
        android:textSize="20sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>